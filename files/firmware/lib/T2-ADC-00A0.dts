/dts-v1/;
/plugin/;

/ {
	compatible = "ti,beaglebone", "ti,beaglebone-black", "ti,beaglebone-green";

	// identification
	part-number = "T2-ADC";
	version = "00A0";

	// resources this cape uses
	exclusive-use =
		"P9.39",		// AIN0
		"P9.40",		// AIN1
		"P9.37",		// AIN2
		"P9.38",		// AIN3
		"P9.33",		// AIN4
		"P9.36",		// AIN5
		"P9.35",		// AIN6

		"tscadc";	// hardware ip used


	fragment@0 {
		target = <&tscadc>;
		__overlay__ {

			status = "okay";
			adc {
			        /* 201812100456 T2: Now using all ADCs (if only as reserved):
				   AIN0 <-> GRDVLT_A
				   AIN1 <-> CTRTMP_A
				   AIN2 <-> EDGTMP_A
				   AIN3 <-> ADCRSRV2
                                   AIN4 <-> ADCRSRV1
                                   AIN5 <-> USER_ACT_A
                                   AIN6 <-> ADCPIN (WOULD-BE LIGHT SENSOR)
				*/				   
				ti,adc-channels = <0 1 2 3 4 5 6>;
				ti,chan-step-avg = <16 16 16 16 16 16 16>;
				ti,chan-step-opendelay = <0x98 0x98 0x98 0x98 0x98 0x98 0x98>;
				ti,chan-step-sampledelay = <0x0 0x0 0x0 0x0 0x0 0x0 0x0>;
			};
		};
	};
};
