/* the cape manager */
/ {
	bone_capemgr {
		compatible = "ti,bone-capemgr";
		status = "okay";

//T2 HAX		nvmem-cells = <&baseboard_data &cape0_data &cape1_data &cape2_data &cape3_data>;
//T2 HAX		nvmem-cell-names = "baseboard", "slot0", "slot1", "slot2", "slot3";
		nvmem-cells = <&baseboard_data &cape0_data>;
		nvmem-cell-names = "baseboard", "slot0";
		#slots = <1>;

		/* map board revisions to compatible definitions */
		baseboardmaps {
			baseboard_beaglebone: board@0 {
				board-name = "A335BONE";
				compatible-name = "ti,beaglebone";
			};

			baseboard_beaglebone_black: board@1 {
				board-name = "A335BNLT";
				compatible-name = "ti,beaglebone-black";
			};
		};
	};
};
